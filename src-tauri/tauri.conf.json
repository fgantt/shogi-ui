{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Shogi Vibe",
  "version": "0.1.0",
  "identifier": "com.shogigame.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Shogi Vibe",
        "width": 1400,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [],
    "publisher": "Shogi Vibe",
    "category": "Game",
    "shortDescription": "Play Shogi (Japanese Chess) against AI",
    "longDescription": "A high-performance Shogi game with advanced AI powered by Rust. Features multiple difficulty levels, opening book, and beautiful themes.",
    "resources": [],
    "copyright": "",
    "licenseFile": "",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
